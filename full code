    <script>
        let teamSlideIndex = 0;
        const teamGallery = document.querySelector('.team-gallery');
        function nextTeamSlide() {
            teamSlideIndex = (teamSlideIndex + 1) % (teamGallery.children.length - 2);
            teamGallery.style.transform = `translateX(-${teamSlideIndex * 320}px)`;
        }
        function prevTeamSlide() {
            teamSlideIndex = (teamSlideIndex - 1 + (teamGallery.children.length - 2)) % (teamGallery.children.length - 2);
            teamGallery.style.transform = `translateX(-${teamSlideIndex * 320}px)`;
        }
        document.querySelectorAll('.faq-toggle').forEach(button => {
            button.addEventListener('click', () => {
                const answer = button.nextElementSibling;
                answer.style.display = answer.style.display === 'block' ? 'none' : 'block';
            });
        });
        fetch("navbar.html").then(res => res.text()).then(data => {
            document.getElementById("navbar").innerHTML = data;
            const currentPath = window.location.pathname;
            let currentFile = currentPath.split("/").pop() || "index.html";
            currentFile = currentFile.toLowerCase();
            const links = document.querySelectorAll("#main-nav a");
            links.forEach(link => {
                link.classList.remove("active");
                let href = link.getAttribute("href").toLowerCase();
                if (href === currentFile || href.endsWith("/" + currentFile)) {
                    link.classList.add("active");
                }
            });
        });
        fetch("footer.html").then(res => res.text()).then(data => document.getElementById("footer").innerHTML = data);
    </script>
</body>
