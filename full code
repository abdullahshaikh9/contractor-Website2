    <script>
        // Hero Slider (same as before)
        let heroSlideIndex = 0;
        const heroSlides = document.querySelectorAll('.hero-slider img');
        function showHeroSlide(index) {
            heroSlides.forEach((slide, i) => slide.classList.toggle('active', i === index));
        }
        function nextSlide() {
            heroSlideIndex = (heroSlideIndex + 1) % heroSlides.length;
            showHeroSlide(heroSlideIndex);
        }
        function prevSlide() {
            heroSlideIndex = (heroSlideIndex - 1 + heroSlides.length) % heroSlides.length;
            showHeroSlide(heroSlideIndex);
        }
        setInterval(nextSlide, 3000);

        // Project Slider - side arrows
        let projectSlideIndex = 0;
        const projectGallery = document.querySelector('.project-gallery');

        function updateProjectSlider() {
            if (!projectGallery) return;
            const items = Array.from(projectGallery.querySelectorAll('.project-item'));
            if (items.length === 0) return;

            const itemWidth = items[0].offsetWidth + 25;
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, items.length - visibleCount);

            if (projectSlideIndex > maxIndex) projectSlideIndex = maxIndex;

            projectGallery.style.transform = `translateX(-${projectSlideIndex * itemWidth}px)`;
        }

        function nextProjectSlide() {
            const items = Array.from(projectGallery.querySelectorAll('.project-item'));
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, items.length - visibleCount);

            if (projectSlideIndex < maxIndex) {
                projectSlideIndex++;
                updateProjectSlider();
            }
        }

        function prevProjectSlide() {
            if (projectSlideIndex > 0) {
                projectSlideIndex--;
                updateProjectSlider();
            }
        }

        // Team Slider - side arrows
        let teamSlideIndex = 0;
        const teamGallery = document.querySelector('.team-gallery');

        function updateTeamSlider() {
            if (!teamGallery) return;
            const items = Array.from(teamGallery.querySelectorAll('.team-member'));
            if (items.length === 0) return;

            const itemWidth = items[0].offsetWidth + 25;
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, items.length - visibleCount);

            if (teamSlideIndex > maxIndex) teamSlideIndex = maxIndex;

            teamGallery.style.transform = `translateX(-${teamSlideIndex * itemWidth}px)`;
        }

        function nextTeamSlide() {
            const items = Array.from(teamGallery.querySelectorAll('.team-member'));
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, items.length - visibleCount);

            if (teamSlideIndex < maxIndex) {
                teamSlideIndex++;
                updateTeamSlider();
            }
        }

        function prevTeamSlide() {
            if (teamSlideIndex > 0) {
                teamSlideIndex--;
                updateTeamSlider();
            }
        }

        // FAQ Toggle
        document.querySelectorAll('.faq-toggle').forEach(button => {
            button.addEventListener('click', () => {
                const answer = button.nextElementSibling;
                answer.style.display = answer.style.display === 'block' ? 'none' : 'block';
            });
        });

        // Events for sliders
        window.addEventListener('resize', () => {
            updateProjectSlider();
            updateTeamSlider();
        });

        document.addEventListener('DOMContentLoaded', () => {
            updateProjectSlider();
            updateTeamSlider();
        });

        // Fetch Navbar and Footer
        fetch("navbar.html")
            .then(res => res.text())
            .then(data => {
                document.getElementById("navbar").innerHTML = data;
                const currentPath = window.location.pathname;
                let currentFile = currentPath.split("/").pop() || "index.html";
                currentFile = currentFile.toLowerCase();
                const links = document.querySelectorAll("#main-nav a");
                links.forEach(link => {
                    link.classList.remove("active");
                    let href = link.getAttribute("href").toLowerCase();
                    if (href === currentFile || href.endsWith("/" + currentFile)) {
                        link.classList.add("active");
                    }
                });
            });

        fetch("footer.html")
            .then(response => response.text())
            .then(data => {
                document.getElementById("footer").innerHTML = data;
            });
    </script>
</body>
</html>

ya ha index


