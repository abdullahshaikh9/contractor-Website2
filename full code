    <div id="footer"></div>

    <script>
        // Filter with active button
        function filterProjects(type) {
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            document.querySelectorAll('.project-item').forEach(item => {
                if (type === 'all' || item.classList.contains(type)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            currentIndex = 0;
            setTimeout(updateSlider, 100);
        }

        // Slider logic
        let currentIndex = 0;

        function getVisibleItems() {
            return Array.from(document.querySelectorAll('.project-item'))
                        .filter(item => getComputedStyle(item).display !== 'none');
        }

        function updateSlider() {
            const gallery = document.getElementById('projectGallery');
            if (!gallery) return;

            const visible = getVisibleItems();
            if (visible.length === 0) {
                gallery.style.transform = 'translateX(0)';
                return;
            }

            const cardWidth = visible[0].offsetWidth + 25;
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, visible.length - visibleCount);

            if (currentIndex > maxIndex) currentIndex = maxIndex;

            gallery.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
        }

        function nextSlide() {
            const visible = getVisibleItems();
            const visibleCount = window.innerWidth > 1100 ? 3 : window.innerWidth > 750 ? 2 : 1;
            const maxIndex = Math.max(0, visible.length - visibleCount);
            if (currentIndex < maxIndex) {
                currentIndex++;
                updateSlider();
            }
        }

        function prevSlide() {
            if (currentIndex > 0) {
                currentIndex--;
                updateSlider();
            }
        }

        window.addEventListener('resize', updateSlider);
        document.addEventListener('DOMContentLoaded', () => {
            updateSlider();
            // Default active button
            document.querySelector('.filter-btn[onclick="filterProjects(\'all\')"]').classList.add('active');
        });

        // Navbar & Footer
        fetch("navbar.html").then(res => res.text()).then(data => {
            document.getElementById("navbar").innerHTML = data;
            const currentPath = window.location.pathname;
            let currentFile = currentPath.split("/").pop() || "index.html";
            currentFile = currentFile.toLowerCase();
            const links = document.querySelectorAll("#main-nav a");
            links.forEach(link => {
                link.classList.remove("active");
                let href = link.getAttribute("href").toLowerCase();
                if (href === currentFile || href.endsWith("/" + currentFile)) {
                    link.classList.add("active");
                }
            });
        });

        fetch("footer.html").then(res => res.text()).then(data => {
            document.getElementById("footer").innerHTML = data;
        });
    </script>
</body>
</html>



